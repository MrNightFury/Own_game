<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet/less" type="text/css" href="css/editor.less">
        <%- include('parts/head'); %>
        <title>Своя игра – Главная</title>
    </head>
    <body>
        <%- include('parts/header', {subtitle: "Text"}) %>
        <main class="editor">
            <div id="setInfo">
                <div>
                    <span id="setTitle"><%- set.set_name %></span>
                    <span id="setId"><%- set.set_id %></span>
                </div>
                <div id="setDescription">
                    <%- set.set_description %>
                </div>
            </div>
            <div>
                <% for( let i = 0; i < rounds.length; i++ ) { %>
                    <div class="round">
                        <label class="roundHeader" for="toggle_<%- i %>">
                            <% if (rounds[i].round.round_name) { %>
                                <span class="roundName">
                                    <%= rounds[i].round.round_name %>
                                </span>
                            <% } else { %>
                                <span class="roundNumber">
                                    Round №
                                    <%= rounds[i].round.round_number %>
                                    <%= rounds[i].round.round_description %>
                                </span>
                                
                            <% } %>
                            
                        </label>
                        <input id="toggle_<%- i %>" type="checkbox">
                        <ul>
                            <% if (rounds[i].categories.length == 0) { %>
                                <div>Empty round</div>
                            <% } %>
                            <% for( let j = 0; j < rounds[i].categories.length; j++ ) { %>
                                <li><%= rounds[i].categories[j].category_name %></li>
                            <% } %>
                        </ul>
                    </div>
                <% } %>
            </div>
        </main>
    </body>
</html>