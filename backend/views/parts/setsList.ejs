<table>
    <colgroup>
        <col>
        <col>
        <col>
        <col>
    </colgroup>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <% if (displayAuthor) { %>
            <th>Set author</th>
        <% } %>
    </tr>
    <% for( let i = 0; i < sets.length; i++ ) { %>
        <tr>
            <td><%= sets[i].set_id %></td>
            <td><a href="sets/<%- sets[i].set_id %>"><%- sets[i].set_name %></a></td>
            <td><%= sets[i].set_description %></td>
            <td>
                <% if (displayAuthor) { %>
                    <%= sets[i].user_login %>
                    <% if (userId == sets[i].set_author_id) { %>
                        <span class="you">(you)</span>
                    <% } %>
                <% } %>
            </td>
        </tr>
    <% } %>
</table>